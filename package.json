{
    "name": "format-cpp",
    "displayName": "format_cpp",
    "description": "convenient typing",
    "version": "0.0.3",
    "publisher": "wwc129",
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:cpp",
        "onLanguage:c"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.addSemicolon",
                "title": "cpp_format",
                "enablement": "editorTextFocus && !findInputFocussed && editorLangId == 'cpp'"
            }
        ],
        "keybindings": [
            {
                "command": "extension.addSemicolon",
                "key": "enter",
                "mac": "enter",
                "enablement": "editorTextFocus && !findInputFocussed && editorLangId == 'cpp'"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
